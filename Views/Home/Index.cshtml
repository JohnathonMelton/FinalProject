@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-image: url('https://static.vecteezy.com/system/resources/thumbnails/024/625/582/small/cute-yellow-mouse-character-background-free-vector.jpg');
        background-size: 100%;
        background-position: center;
        font-family: Arial, sans-serif;
        color: orangered;
        margin: 0;
        padding: 0;
    }

    .container {
        text-align: center;
        padding-top: 100px; /*Adjust this value for spacing */
    }

    .container h1 {
        font-size: 3rem;
        margin-bottom: 20px;
    }

    .container p {
        font-size: 1.2rem;
        margin-bottom: 20px;
    }

    .container a {
        color:orangered;
        text-decoration: none;
        font-weight: bold;
        padding: 10px 20px;
        background-color:#4CAF50;
        border-radius: 5px;
        transition: bacground-color 0.3s;
    }

    .container a:hover {
        background-color: #45a049;
    }
</style>

<div class="container">
    <h1>Welcome!</h1>
    <a asp-controller="Pokemon" asp-action="Index">Go to Pokemon Database</a>
</div>






