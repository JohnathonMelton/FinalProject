@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-image: url('https://images4.alphacoders.com/119/119094.jpg');
        background-size: cover;
        opacity: 0.9;
        background-position: 50% 50%; 
        background-repeat: no-repeat;
        font-family: Arial, sans-serif;
        color: whitesmoke;
        margin: 0;
        padding: 0;
        height: 100vh;
        position: relative;
    }

    .container {
        text-align: center;
        padding-top: 10px; /*Adjust this value for spacing */
    }

    .container h1 {
        font-size: 5rem;
        margin-bottom: 20px;
    }
    .footer {
        position: absolute;
        bottom: 15%; /*Adjust this value to move the button higher or lower*/
        width: 100%;
        text-align: left;
        padding-bottom: 20px;
    }

    .footer a {
        color:black;
        text-decoration: none;
        font-weight: bold;
        padding: 10px 20px;
        background-color: midnightblue;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .footer a:hover {
        background-color: royalblue;
    }
</style>

<div class="container">
    <h1>Welcome!</h1>
</div>
<div class="footer">
    <a asp-controller="Pokemon" asp-action="Index">Head to the Database</a>
</div>






