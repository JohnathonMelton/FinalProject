@model Pokemon

<h1>Delete Pokemon</h1>

<p>Are you sure you want to delete this Pokemon?</p>

<div>

    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Type:</strong> @Model.Type</p>
    <p><strong>Abilities:</strong> @Model.Abilities</p>
    <p><strong>HP:</strong> @Model.HP</p>
    <p><strong>Attack:</strong> @Model.Attack</p>
    <p><strong>Defense:</strong> @Model.Defense</p>
    <p><strong>Special Attack:</strong> @Model.SpecialAttack</p>
    <p><strong>Special Defense:</strong> @Model.SpecialDefense</p>
    <p><strong>Speed:</strong> @Model.Speed</p>
    <p><strong>Generation:</strong> @Model.Generation</p>
    <p><strong>Legendary:</strong> @Model.Legendary</p>

</div>

<form asp-action="Delete" asp-route-id="@Model.PokemonID" method="post">
    <button type="submit">Delete</button>
</form>
